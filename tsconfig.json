{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "rootDir": "./src/",
      "outDir": "./dist/",
      
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
  
      "strict": true,
      "skipLibCheck": true
    },
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts",
      "dist/**/*",
      "test/**/*"
    ]
  }
  